<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiEditor.MainPage"
             xmlns:viewmodel="clr-namespace:MauiEditor.ViewModel"
             x:DataType="viewmodel:MainViewModel">
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Funtions">
            <MenuFlyoutItem Text="Skab ny data" Command="{Binding InsertDataCammand}"/>
            <MenuFlyoutItem Text="Manage Kommuner" Command="{Binding KommuneCommand}" />
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem Text="Tøm Felterne" Command="{Binding ClearCommand}" />
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem Text="Luk" Command="{Binding ExitCommand}" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    <ScrollView>
        <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Text="Kommune"/>
                <Label Grid.Column="2" Text="Gruppe"/>
                <Label Grid.Column="4" Text="Aarstal"/>
                <Entry Grid.Row="1" Grid.Column="0" Text="{Binding City}"/>
                <Entry Grid.Row="1" Grid.Column="2" Text="{Binding Gruppe}"/>
                <Entry Grid.Row="1" Grid.Column="4" Text="{Binding Year}"/>

                <Button Grid.Row="1" Grid.Column="8" Text="Søg" Command="{Binding SearchCommand}"/>

                <Label Grid.Row="2" Grid.Column="0" Text="Data Id:"/>
                <Label Grid.Row="2" Grid.Column="1" Text="Kom_nr:"/>
                <Label Grid.Row="2" Grid.Column="2" Text="Kommune:"/>
                <Label Grid.Row="2" Grid.Column="3" Text="Gruppe:"/>
                <Label Grid.Row="2" Grid.Column="4" Text="Aarstal:"/>
                <Label Grid.Row="2" Grid.Column="5" Text="Tal:"/>

                <ListView Grid.Row="2" Margin="10" Grid.Column="0" Grid.ColumnSpan="6" ItemsSource="{Binding DataList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Margin="10" Orientation="Horizontal">
                                    <Label Padding="0,0,200,0" Text="{Binding DataId}" />
                                    <Label Padding="200,0,200,0" Text="{Binding KomNr}" />
                                    <Label Padding="200,0,200,0" Text="{Binding City}" />
                                    <Label Padding="200,0,200,0" Text="{Binding Gruppe}" />
                                    <Label Padding="200,0,200,0" Text="{Binding Year}" />
                                    <Label Padding="200,0,0,0" Text="{Binding Num}" />
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
    </ScrollView>

</ContentPage>
